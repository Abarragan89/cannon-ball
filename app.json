{
  "expo": {
    "scheme": "cannonBall",
    "name": "cannonBall",
    "slug": "cannonBall",
    "version": "1.0.0",
    "orientation": "landscape",
    "backgroundColor": "#b59a57",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app does not require access to your microphone."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "permissions": [
          "RECORD_AUDIO",
          "READ_EXTERNAL_STORAGE",
          "WRITE_EXTERNAL_STORAGE",
          "READ_PHONE_STATE",
          "DETECT_SCREEN_CAPTURE"
        ]
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/titleFont.ttf",
            "./assets/fonts/textFont.ttf"
          ]
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Cannon Ball to access your microphone."
        }
      ],
      "expo-router"
    ]
  }
}
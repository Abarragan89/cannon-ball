{
  "expo": {
    "scheme": "cannonBall",
    "name": "Cannon Ball",
    "slug": "cannonBall",
    "version": "1.0.0",
    "orientation": "landscape",
    "backgroundColor": "#b59a57",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "buildNumber": "1.0.0",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app does not require access to your microphone."
      },
      "bundleIdentifier": "com.antdev.cannonball"
    },
    "android": {
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "permissions": [
          "RECORD_AUDIO",
          "READ_EXTERNAL_STORAGE",
          "WRITE_EXTERNAL_STORAGE",
          "READ_PHONE_STATE",
          "DETECT_SCREEN_CAPTURE"
        ]
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.ant_dev.cannonBall"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/titleFont.ttf",
            "./assets/fonts/textFont.ttf"
          ]
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Cannon Ball to access your microphone."
        }
      ],
      "expo-router"
    ],
    "extra": {
      "eas": {
        "projectId": "5d0fb9de-7ec0-4dc9-aa8f-8014b90a39c0"
      }
    }
  }
}
